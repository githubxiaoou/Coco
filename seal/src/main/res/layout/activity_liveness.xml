<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seal_bg"
    tools:context=".ui.activity.liveness.LivenessActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_three"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_three"
            android:text="三天不活跃"
            android:textColor="@color/text_black_color"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:text="超过三天未使用闲聊的群成员"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/tv_three"
            app:layout_constraintTop_toBottomOf="@id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

    <View
        app:layout_constraintTop_toBottomOf="@id/cl_three"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_two"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/cl_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_two"
            android:text="一周不活跃"
            android:textColor="@color/text_black_color"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:text="超过一周未使用闲聊的群成员"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/tv_two"
            app:layout_constraintTop_toBottomOf="@id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

    <View
        app:layout_constraintTop_toBottomOf="@id/cl_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_three"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/cl_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/tv_three"
            android:text="一个月不活跃"
            android:textColor="@color/text_black_color"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:text="超过一个月未使用闲聊的群成员"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/tv_three"
            app:layout_constraintTop_toBottomOf="@id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>